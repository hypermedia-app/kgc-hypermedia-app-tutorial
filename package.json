{
  "name": "creta-todos",
  "private": true,
  "scripts": {
    "clean": "git clean -dfx -e node_modules -e .idea -e .vscode -e .husky",
    "postinstall": "yarn-deduplicate",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore",
    "copier:root": "copier -a .copier-creta.yaml -s apps/todos -s apps/users update",
    "bootstrap": "dotenv -c local -- run-s bootstrap:*",
    "bootstrap:dev": "wsrun -msc bootstrap resources resources.dev",
    "bootstrap:vocabs": "talos put-vocabs --endpoint $SPARQL_ENDPOINT --user $SPARQL_USER --password $SPARQL_PASSWORD",
    "start": "knossos-ts serve $SPARQL_ENDPOINT --name $APP_NAME --user $SPARQL_USER --password $SPARQL_PASSWORD --routePath $API_ROOTS",
    "precommit": "yarn lint && wsrun -m -c precommit",
    "build": "yarn wsrun -m -c build",
    "serve": "dotenv -e .env.lando -- node server.js",
    "copier:todos": "copier -a .copier-todos.yaml update",
    "copier:users": "copier -a .copier-users.yaml update"
  },
  "license": "MIT",
  "author": "Tomasz Pluskiewicz <no-reply@t-code.pl>",
  "repository": "https://github.com/hypermedia-app/kgc-hypermedia-app-tutorial",
  "dependencies": {
    "@hydrofoil/knossos": "^0.6.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-conditional-middleware": "^2.1.1",
    "express-history-api-fallback": "^2.2.1",
    "path-to-regexp": "^6.2.0"
  },
  "devDependencies": {
    "@hydrofoil/talos": "^0.4.4",
    "@open-wc/eslint-config": "^7.0.0",
    "@tpluscode/eslint-config": "^0.3.0",
    "@types/sparql-http-client": "^2.2.7",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "standard": "^16.0.4",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.4",
    "wsrun": "^5.2.4",
    "yarn-deduplicate": "^4.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ],
    "*.rej": "exit 1"
  }
}
